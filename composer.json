{
    "name": "iet-ou/moodle-backup-parser",
    "description": "Parse Moodle backup MBZ archives. Developed for OU-APPLAuD. Â©2016 The Open University, UK (IET).",
    "homepage": "https://docs.moodle.org/29/en/Course_backup",
    "keywords": [ "Moodle", "archive", "zip", "course", "VLE", "OpenUniversity", "IET-OU" ],
    "license": "proprietary",
    "time": "2016-04-20T15:10:55",
    "minimum-stability": "beta",
    "type": "library",
    "authors": [
      { "name": "Nick Freear (@nfreear)", "role": "Lead developer" }
    ],
    "support": {
      "email": "iet-webmaster@open.ac.uk",
      "source": "https://github.com/IET-OU/moodle-backup-parser"
    },
    "require": {
      "ext-simplexml": "*",
      "php": ">=5.4.0"
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "^2.6",
      "jakub-onderka/php-parallel-lint": "^0.9.2",
      "phpunit/phpunit": "~4.0"
    },
    "suggest": {
      "Moodle": ">= 2.9.3; E-learning platform <https://github.com/moodle/moodle>"
    },
    "autoload": {
      "psr-4": {
        "Nfreear\\MoodleBackupParser\\": "lib"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Nfreear\\MoodleBackupParser\\Test\\Extend\\": "tests/extend"
      }
    },
    "scripts": {
      "test": [
        "composer validate --no-interaction",
        "./vendor/bin/parallel-lint --exclude vendor .",
        "phpcs --version",
        "phpcs --standard=PSR2 -n --encoding=utf-8 --extensions=php lib/* tests/* && echo OK",
        "phpunit"
      ],
      "gunzip": [
        "file tests/fixtures/backup-moodle2-course-2-lorem2016--nu.mbz",
        "# cp -n tests/fixtures/backup-moodle2-course-2-lorem2016--nu.mbz tests/fixtures/backup-moodle2--nu.mbz.gz",
        "# gunzip tests/fixtures/backup-moodle2--nu.mbz.gz tests/fixtures/backup-moodle2/"
      ],
      "teardown": [
        "rm -rf tests/output/static-pages/*",
        "git checkout tests/output/static-pages"
      ],
      "grep-links": [
        "# Links",
        "egrep -rno '<[^>]+=\"\\$@[A-Z]+\\*.+?>.+?<.+?>' ../static_pages",
        "\n# Images & files\n",
        "egrep -rno '<[^>]+=\"@@[A-Z]+@@[^>]+>' ../static_pages"
      ],
      "fix": [
        "phpcbf --standard=PSR2 -n --encoding=utf-8 --extensions=php lib/*"
      ]
    }
}
